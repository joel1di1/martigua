.raw
  .col-md-8
    .panel.panel-default
      .panel-heading
        %h3.panel-title Prochains matchs
      .panel-body
        %table.table.table-bordered.table-condensed.table-hover
          = render partial: 'matches/next_match_coach', collection: @next_matches
        .text-center
          - ids = @next_matches.compact.map(&:id)
          = simple_form_for current_user, url: invitations_path(match_id: ids), method: :post do
            %button.btn.btn-primary 
              Envoyer les invitations à tous les joueurs

  .col-md-8
    .panel.panel-default
      .panel-heading
        %h3.panel-title Prochains entrainements
      .panel-body
        %table.table.table-bordered.table-condensed.table-hover
          = render partial: 'trainings/next_training_coach', collection: @next_trainings
        .text-center
          - ids = @next_trainings.compact.map(&:id)
          = simple_form_for current_user, url: invitations_path(training_id: ids), method: :post do
            %button.btn.btn-primary
              Envoyer les invitations à tous les joueurs