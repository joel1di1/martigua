.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Prochains matchs
      .panel-body
        %table.table.table-bordered.table-condensed.table-hover
          = render partial: 'matches/next_match_coach', collection: @next_matches
        .text-center
          - ids = @next_matches.compact.map(&:id)

  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Prochains entrainements
      .panel-body
        %table.table.table-bordered.table-condensed.table-hover
          = render partial: 'trainings/next_training_coach', collection: @next_trainings
        .text-center
          - ids = @next_trainings.compact.map(&:id)

  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Joueurs sans cotis
      .panel-body
        - emails = @users_without_cotis.map(&:email).join(", ")
        = mail_to emails, emails, subject: 'Paiement des cotisations'

  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Joueurs sans certifs
      .panel-body
        - emails = @users_without_certif.map(&:email).join(", ")
        = mail_to emails, emails, subject: 'Certificats m√©dicaux'
