.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Stats présence joueurs
      .panel-body
        %table.table.table-bordered.table-condensed.table-hover
          %thead
            %tr
              %th Joueur
              %th Précence à l'entrainement
              %th Précence aux matchs
          %tbody
            - @users_attendence.each do |user_attendence|
              %tr
                %td= user_attendence[0]
                %td.text-right= number_to_percentage user_attendence[1]*100, precision: 0
                %td.text-right= number_to_percentage user_attendence[2]*100, precision: 0
