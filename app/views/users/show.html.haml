.panel.panel-default
  .panel-body
    %h2= "#{@user.first_name} #{@user.last_name}"
    %h3= @user.nickname

    %address
      = mail_to @user.email
      %br
      Tel:
      = @user.phone
    %ul
      %li Certificat médical : #{t(@user.certificat_medical.to_s)}  
      %li Cotisation payée : #{t(@user.cotisation.to_s)}
- if current_user == @user
  = link_to 'Modifier', edit_user_path(@user)

.panel.panel-default
  .panel-heading
    .panel-title  
      Score "vie de club" : 
      %strong= @user.score
  .panel-body
    %table.table.table-striped
      %thead
        %tr
          %th Score
          %th Evénement
      %tbody
        - @user.score_events.each do |score_event|
          %tr
            %td= score_event.value
            %td= score_event.label



