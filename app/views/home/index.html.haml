.raw

  .col-md-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Résultats des derniers matchs
      .panel-body
        %table.table.table-bordered.table-condensed
          = render partial: 'matches/result', collection: @last_matches

  .col-md-8
    .panel.panel-default
      .panel-heading
        %h3.panel-title Prochains matchs
      .panel-body
        - unless current_user.set_availability_for? @next_matches
          .alert.alert-warning
            Tu n'as pas encore rensigné tes dispos pour les prochains matchs
        %table.table.table-bordered.table-condensed
          = render partial: 'matches/next_match', collection: @next_matches
        .bulk_actions.pull-right
          = simple_form_for current_user, url: bulk_availabilities_matches_path(id: @next_matches.map(&:id), availability: 1), method: :post do |f|
            %button.btn.btn-xs.btn-success Dispo pour tous les matchs
          = simple_form_for current_user, url: bulk_availabilities_matches_path(id: @next_matches.map(&:id), availability: 1), method: :post do |f|
            %button.btn.btn-xs.btn-danger Dispo pour aucun match


