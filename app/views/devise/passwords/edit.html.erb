<h2>Choisi un nouveau mot de passe</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>
  <%= f.input :password, :label => "Mot de passe", :required => true, :autofocus => true %>
  <%= f.input :password_confirmation, :label => "Confirmation du mot de passe", :required => true %>
  <%= f.button :submit, "Changer le mot de passe" %>
<% end %>

<%= render "devise/shared/links" %>
